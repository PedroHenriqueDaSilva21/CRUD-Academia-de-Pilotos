<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Editar Pilotos</h1>
            <hr>
        </div>
        <div class="card-body">
            <form action="/pilotos/update" method="POST">
                <label>Nome do Piloto:</label>
                <input class="form-control" type="text" name="nome" id="nome" value="<%= piloto.nome %>" required>
                <label>Nacionalidade do Piloto:</label>
                <input class="form-control" type="text" name="nacionalidade" id="nacionalidade" value="<%= piloto.nacionalidade %>" required>
                <input type="hidden" name="id" value="<%= piloto.id %>">
                <br>
                <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações para o piloto <%= piloto.nome %>')">
            </form>
            <hr>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs') %>