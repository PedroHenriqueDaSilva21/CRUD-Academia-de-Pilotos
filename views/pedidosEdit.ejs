<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Editar Pedido</h1>
            <hr>
        </div>
        <div class="card-body">
            <form action="/pedidos/update" method="POST">
                <label>Numero do Pedido:</label>
                <input class="form-control" type="text" name="numero" id="numero" value="<%= pedido.numero %>" required>
                <label>Preco do Pedido:</label>
                <input class="form-control" type="text" name="preco" id="preco" value="<%= pedido.preco %>" required>
                <input type="hidden" name="id" value="<%= pedido.id %>">
                <br>
                <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações para o cliente <%= pedido.numero %>')">
            </form>
            <hr>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs') %>